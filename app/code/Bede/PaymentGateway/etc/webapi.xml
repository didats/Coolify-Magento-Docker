<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/bede_payment/methods" method="GET">
        <service class="Bede\PaymentGateway\Api\PaymentMethodsInterface" method="getMethods"/>
        <resources>
            <resource ref="self"/> <!-- For logged-in customers -->
        </resources>
    </route>
    
    <!-- If you need guest access -->
    <route url="/V1/guest-carts/:cartId/bede_payment/methods" method="GET">
        <service class="Bede\PaymentGateway\Api\PaymentMethodsInterface" method="getGuestMethods"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>