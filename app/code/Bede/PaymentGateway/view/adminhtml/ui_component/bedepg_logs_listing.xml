<?xml version="1.0" ?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">bedepg_logs_listing.bedepg_logs_listing_data_source</item>
		</item>
	</argument>
	<settings>
		<buttons>
			<button class="Bede\PaymentGateway\Block\Adminhtml\Log\ClearButton" name="clear"/>
        </buttons>
		<spinner>bedepg_logs_columns</spinner>
		<deps>
			<dep>bedepg_logs_listing.bedepg_logs_listing_data_source</dep>
		</deps>
	</settings>
	<dataSource name="bedepg_logs_listing_data_source" component="Magento_Ui/js/grid/provider">
		<settings>
			<storageConfig>
				<param name="indexField" xsi:type="string">id</param>
			</storageConfig>
			<updateUrl path="mui/index/render"/>
		</settings>
		<aclResource>Bede_PaymentGateway::logs</aclResource>
		<dataProvider name="bedepg_logs_listing_data_source" class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
			<settings>
				<requestFieldName>id</requestFieldName>
				<primaryFieldName>id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<listingToolbar name="listing_top">
		<settings>
			<sticky>true</sticky>
		</settings>
				<filterSearch name="fulltext"/>    
		<bookmark name="bookmarks"/>
		<columnsControls name="columns_controls"/>
		<filters name="listing_filters"/>
		<paging name="listing_paging"/>
		<exportButton class="Magento\Ui\Component\ExportButton" component="Magento_Ui/js/grid/export" displayArea="dataGridActions">
			<settings>
				<options>
					<option name="csv" xsi:type="array">
						<item name="value" xsi:type="string">csv</item>
						<item name="label" xsi:type="string" translate="true">CSV</item>
						<item name="url" xsi:type="string">mui/export/gridToCsv</item>
					</option>
					<option name="xml" xsi:type="array">
						<item name="value" xsi:type="string">xml</item>
						<item name="label" xsi:type="string" translate="true">Excel XML</item>
						<item name="url" xsi:type="string">mui/export/gridToXml</item>
					</option>
				</options>
			</settings>
		</exportButton>
	</listingToolbar>
	
	<columns name="bedepg_logs_columns">
		<selectionsColumn name="ids">
			<settings>
				<indexField>id</indexField>
			</settings>
		</selectionsColumn>
		<column name="id">
			<settings>
				<dataType>text</dataType>
				<filter>text</filter>
				<sorting>desc</sorting>
				<label translate="true">ID</label>
				
			</settings>
		</column>
		<column name="merchant_track_id">
			<settings>
				<filter>text</filter>
				<label translate="true">Merchant Track ID</label>
			</settings>
		</column>
		<column name="type">
			<settings>
				<dataType>text</dataType>
				<filter>text</filter>
				<label translate="true">Type</label>
			</settings>
		</column>
		<column name="endpoint">
			<settings>
				<filter>text</filter>
				<label translate="true">Endpoint</label>
			</settings>
		</column>
    <column name="method">
			<settings>
				<filter>text</filter>
				<label translate="true">Method</label>
			</settings>
		</column>
		<column name="status">
			<settings>
				<filter>text</filter>
				<label translate="true">Status</label>
			</settings>
		</column>
		
		<column name="created_at">
			<settings>
				<filter>text</filter>
				<label translate="true">Executed At</label>
			</settings>
		</column>
		<column name="request_data" class="Bede\PaymentGateway\Ui\Component\Listing\Column\JsonData">
			<settings>
				<filter>false</filter>
        		<sortable>false</sortable>
				<label translate="true">Request Data</label>
				<bodyTmpl>ui/grid/cells/html</bodyTmpl>
			</settings>
		</column>
		<column name="response_data" class="Bede\PaymentGateway\Ui\Component\Listing\Column\JsonData">
			<settings>
				<filter>false</filter>
        		<sortable>false</sortable>
				<label translate="true">Response Data</label>
				<bodyTmpl>ui/grid/cells/html</bodyTmpl>
			</settings>
		</column>
	</columns>
</listing>
